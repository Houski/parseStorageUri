{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base", "plugin:jest/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["jest"],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["__test__/**/*"] }
    ]
  }
}
